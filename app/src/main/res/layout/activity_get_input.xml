<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetInput">

    <TextView
        android:id="@+id/webName_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:fontFamily="@font/jetbrains_mono"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:paddingStart="20dp"
        android:paddingTop="40dp"/>

    <EditText
        android:id="@+id/webName_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webName_text"
        android:background="#30aaaaaa"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:padding="13dp"
        android:hint="website name/link"
        android:fontFamily="@font/jetbrains_mono"
        android:textColor="@color/black"
        android:textColorHint="#60000000"/>

    <TextView
        android:id="@+id/userName_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/webName_input"
        android:text="Username"
        android:fontFamily="@font/jetbrains_mono"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:paddingStart="20dp"
        android:paddingTop="40dp"/>

    <EditText
        android:id="@+id/userName_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName_text"
        android:background="#30aaaaaa"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:padding="13dp"
        android:hint="username"
        android:fontFamily="@font/jetbrains_mono"
        android:textColor="@color/black"
        android:textColorHint="#60000000"/>

    <TextView
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userName_input"
        android:text="Password"
        android:fontFamily="@font/jetbrains_mono"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:paddingStart="20dp"
        android:paddingTop="40dp"/>

    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_text"
        android:background="#30aaaaaa"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:padding="13dp"
        android:inputType="textPassword"
        android:hint="password"
        android:fontFamily="@font/jetbrains_mono"
        android:textColor="@color/black"
        android:textColorHint="#60000000"/>

    <Button
        android:id="@+id/addToDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter"
        android:layout_below="@id/password_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

</RelativeLayout>